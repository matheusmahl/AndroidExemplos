<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="br.edu.pdm.cityharm">

    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity_">
        </activity>
        <activity android:name=".principal.PrincipalActivity_">
        </activity>
        <activity android:name=".dispositivos.DispositivosPareadosActivity_">
        </activity>
        <activity android:name=".dispositivos.LocalizarDispositivosActivity_">
        </activity>
        <activity android:name=".AcelerometroActivity_">
        </activity>
    </application>

</manifest>